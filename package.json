{
  "name": "haccp-app",
  "version": "1.0.0",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "electron": "electron .",
    "dist": "electron-builder --win --mac",
    "agent": "node print-agent.js",
    "test-agent": "node tools/test-agent.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.665.0",
    "bcryptjs": "^2.4.3",
    "imap": "^0.8.19",
    "mailparser": "^3.9.3",
    "mongodb": "^7.1.0",
    "pdf-parse": "^1.1.1",
    "pdf-poppler": "^0.2.3",
    "pdfkit": "^0.17.2",
    "tesseract.js": "^7.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.haccp.system",
    "productName": "HACCP System",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
